{% extends 'base.html.twig' %}

{% block title %}{{ raceName }}{% endblock %}

{% block body %}

    <ol style="padding: 0; margin: 0;">
        {% set i = 1 %}
        {% for race in raceData %}

            <li style="display: flex; justify-content: space-around; align-items: baseline">
{#                <a href="{{ baseUri }}/athelete/">#}
                    <h4>{{ i }}. {{ race.athlete.firstName }} {{ race.athlete.lastName }}</h4>
                    <ul style="list-style: none ;display: flex; justify-content: space-between">
                        <li style="width: 8em;">{{ race.run_1|date('i:s:u') }}</li>
                        <li style="width: 8em;">{{ race.run_2|date('i:s:u') }}</li>
                        <li style="width: 8em;">{{ race.run_average|date('i:s:u') }}</li>
                    </ul>
{#                </a>#}
            </li>
            {% set i = i + 1 %}
        {% endfor %}
    </ol>


{% endblock %}
